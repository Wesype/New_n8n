{
  "task-runners": [
    {
      "runner-type": "python",
      "workdir": "/opt/n8n/packages/@n8n/task-runner-python",
      "command": "/usr/local/bin/python3",
      "args": ["src/main.py"],
      "health-check-server-port": "5682",
      "allowed-env": [
        "PATH",
        "PYTHONPATH",
        "PLAYWRIGHT_BROWSERS_PATH",
        "PLAYWRIGHT_CHROMIUM_ARGS"
      ],
      "env-overrides": {
        "PYTHONPATH": "/opt/n8n/packages/@n8n/task-runner-python",
        "N8N_RUNNERS_STDLIB_ALLOW": "json,sys,os,re,asyncio,time,io,tempfile,base64,pathlib",
        "N8N_RUNNERS_EXTERNAL_ALLOW": "crawl4ai,playwright,beautifulsoup4,bs4,lxml,aiohttp,aiofiles",
        "N8N_RUNNERS_HEALTH_CHECK_SERVER_HOST": "0.0.0.0",
        "N8N_RUNNERS_TASK_TIMEOUT": "60000",
        "N8N_RUNNERS_AUTO_SHUTDOWN_TIMEOUT": "30"
      }
    }
  ]
}
